<div class="container">
  <div class="col-md-6 col-md-offset-3">

    <h2>Add User</h2>

    <%= form_for @user, url: magic_create_users_path, method: :post do |f| %>

      <%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name' %>

      <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last Name' %>

      <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>

      <%= f.text_field :betacode_id, class: 'form-control', placeholder: 'Betacode ID' %>

      <%= f.text_field :level_id, class: 'form-control', placeholder: 'Level ID' %>

      <br>

      <%= f.submit "Add User", class: 'btn red lighten-2', style: 'margin-bottom: 10px;'%>

      <br>
    <% end %>

  </div>
</div>
