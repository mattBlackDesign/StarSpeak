<h2><%= @moduler.name %> Lessons</h2>
<nav id="breadcrumb-nav">
  <div class="nav-wrapper">
    <div class="col s12">
      <%= link_to "Dashboard", level_modulers_path(@level),:class => "breadcrumb"%>
			<%= link_to @moduler.name, level_moduler_lessons_path(@level, @moduler), :class => "breadcrumb" %>
    </div>
  </div>
</nav>
<br>
<hr>

<div class="row">
	<% @lessons.each do |lesson| %>
		<%= link_to level_moduler_lesson_path(@level, @moduler,lesson) do%>
			<div class="col m3 stats">
				<div class="card white hoverable center waves-effect waves-red full-width">
					<div class="card-content valign-wrapper center">
						<h5 class="valign black-text flex-1"><%= lesson.name %></h5>
					</div>
				</div>
			</div>
		<% end %>
	<% end %>
</div>
